<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
	</configSections>

	<appSettings>
		<!-- NOTE: the export path must also be changed in the custom firefox profile -->
		<add key="EXPORT_DIR" value="C:\temp\" />
		<add key="EXPORT_FILE" value="PTImporter.csv" />
		
	</appSettings>
	
    <connectionStrings>
        <add name="ETCMConnectionString"
            connectionString="Data Source=alliance5;Initial Catalog=ETCM;Integrated Security=True"
            providerName="System.Data.SqlClient" />
    </connectionStrings>

	<log4net>
		<appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender">
			<file value="pt_importer.log"/>
			<appendToFile value="true"/>
			<maximumFileSize value="8000KB"/>
			<maxSizeRollBackups value="15"/>
			<staticLogFileName value="true"/>
			<rollingStyle value="Size"/>
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%d{HH:mm:ss} [%t] %-5p %c - %m%n"/>
			</layout>
		</appender>
		<root>
			<level value="DEBUG"/>
			<appender-ref ref="LogFileAppender"/>
		</root>
	</log4net>
</configuration>
